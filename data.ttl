############################
# LOGO AND TYPE RULES
############################
ex:LogoRule_RefinedSquiggle a brand:LogoUsageRule ;
  brand:description "Use the Superside 'S' squiggle logo. Keep it clean, with clear space. Do not distort." .

ex:Typography_Superside_2025 a brand:Typography ;
  brand:primaryFontFamily "Inter Tight" .

############################
# VISUAL CONCEPT (The Scene)
############################
ex:Concept_CreativeFlow a brand:VisualConcept ;
  brand:description "A candid, over-the-shoulder shot of a Senior Designer deeply focused on a digital interface. The screen glows softly against their face." ;
  brand:hasVisualAnchor "Natural golden hour lighting coming from a side window" ;
  brand:hasVisualAnchor "Texture of wood grain on the desk" ;
  brand:hasVisualAnchor "Coffee cup and physical sketches on desk" .

############################
# STYLE RULES (Reusable)
############################
ex:Rule_Photoreal a brand:ImageryRule ;
  brand:ruleType "positive" ;
  brand:description "Photorealistic imagery grounded in real production context; natural light, real textures" .

ex:Rule_SystemAware a brand:ImageryRule ;
  brand:ruleType "positive" ;
  brand:description "Show creative production at scale, messy but aesthetic workflow" .

ex:Rule_NoNeon a brand:ImageryRule ;
  brand:ruleType "negative" ;
  brand:description "Avoid neon/futuristic AI tropes, glowing circuits, cyberpunk palettes" .

ex:Rule_NoStock a brand:ImageryRule ;
  brand:ruleType "negative" ;
  brand:description "Avoid generic stock-photo look, posed teams shaking hands" .

############################
# FORMATS
############
ex:Deliverable_Banner a brand:Deliverable ;
  brand:usesFormat ex:Format_WebBanner .

ex:Format_WebBanner a brand:Format ;
  brand:widthPx 1200 ;
  brand:heightPx 628 .