@prefix brand: <https://schema.example.com/brand/> .
@prefix ex:    <https://data.example.com/> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

############################
# THE BRAND
############################
ex:Superside a brand:Brand ;
  brand:name "Superside" ;
  brand:hasTypography ex:Typography_Superside_2025 ;
  brand:hasLogoUsageRule ex:LogoRule_RefinedSquiggle ;
  
  # Image Rules
  brand:hasImageryRule ex:Rule_Photoreal, ex:Rule_SystemAware, ex:Rule_NoNeon, ex:Rule_NoStock .

############################
# CAMPAIGN: NEW WEB FEATURES (With text and logo)
############################
ex:Campaign_Web_NewFeatures_2025Q1 a brand:Campaign ;
  brand:name "Web â€” New features (2025 Q1)" ;
  brand:forBrand ex:Superside ;
  
  # SPECIFIC TEXT (Verbal Identity)
  brand:hasHeadline "Scale Creative Ops Without The Chaos" ;
  brand:hasSubhead "New AI-powered workflows for enterprise teams." ;
  brand:hasCTA "See What's New" ;
  
  # LOGO INSTRUCTIONS (Visual Identity)
  brand:logoPlacement "Top-Right Corner" ;
  brand:logoStyle "White Monochrome (High Contrast)" ;

  # VISUAL CONNECTION
  brand:hasVisualConcept ex:Concept_CreativeFlow ;
